<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="./css/layout.css" />
    <script src="./Public/js/jquery.js"></script>
    <script src="./Public/js/ajax.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Đăng nhập</title>
</head>
<body>
    <div class="header">  
        <div class="form">
            <h2>Đăng nhập Admin</h2>
            <div class="form_login">
                <form action="./Admin/login" method="post" enctype="multipart/form-data">
                    <input type="text" name="NameUser" placeholder=" Nhập tên đăng nhập" /> <br/>
                    <input type="text" name="Password" placeholder=" Nhập mật khẩu" /> <br/>
                    <input type="submit" value="Đăng nhập" >
                </form>
            </div>
        </div>
    </div>

</body>
</html>
<script>
    $(document).ready(function(){
    
        var url = "http://localhost:3000";
    
      
    
        $("#btn_Login").click(function(){
            if($("#userName").val().length==0 || $("#password").val().length==0){
                alert("vui lòng điền tên đăng nhập và mật khẩu");
            }else{
                $.post(url + "/Admin/login", {
                    NameUser:$("#userName").val(),
                    Password:$("#password").val()    
                }, function(data){
                    if(data.kq==true){
                        alert("Delete cate failed: " + data.errMsg);
                    }else{
                        console.log("bad");
                    }
                });
            }
        });
    
       
    
    });
    
    </script>
